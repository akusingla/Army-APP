
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="indian_army.army.Activities.IcoActivity"
    android:orientation="vertical"
    android:background="@drawable/back"
    android:baselineAligned="false">


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="64dp"
         android:orientation="horizontal"
        android:id="@+id/container_ico">


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/armyLogo"
            android:src="@mipmap/army_logogo"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:contentDescription="@string/image" />



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"

            android:text="@string/app_name"
            android:id="@+id/textView"
            android:textSize="48sp"
            style="@style/Base.TextAppearance.AppCompat.Inverse" />



        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/emeLogo"
            android:src="@mipmap/eme_logo"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true" />



    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/link1"
        android:onClick="categories"
        android:id="@+id/link1"
        android:layout_marginStart="20dp"
        android:layout_marginTop="48dp"
        android:height="50dp"
        android:width="300dp"
        android:backgroundTint="#1F1F1F"

        style="@style/Base.TextAppearance.AppCompat.Inverse"
        android:background="@mipmap/dark"
        android:enabled="true"
        android:focusable="false"
        android:elegantTextHeight="true"
        android:clickable="true"
        android:textStyle="bold"
        android:ellipsize="marquee" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/link2"
        android:onClick="ror"
        android:id="@+id/link2"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:height="50dp"
        android:width="300dp"
        android:backgroundTint="#1F1F1F"
        style="@style/Base.TextAppearance.AppCompat.Inverse"
        android:background="@mipmap/dark"
        android:enabled="true"
        android:textStyle="bold" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/link3"
        android:onClick="uhq"
        android:id="@+id/link3"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:height="50dp"
        android:width="300dp"
        style="@style/Base.TextAppearance.AppCompat.Inverse"
        android:background="@mipmap/dark"
        android:enabled="true"
        android:textStyle="bold"
        android:backgroundTint="#1F1F1F" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/link4"
        android:onClick="pgm"
        android:id="@+id/link4"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:height="50dp"
        android:width="300dp"
        android:focusable="true"
        android:backgroundTint="#1F1F1F"
        style="@style/Base.TextAppearance.AppCompat.Inverse"
        android:background="@mipmap/dark"
        android:enabled="true"
        android:textStyle="bold" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/link5"
        android:onClick="dis"
        android:id="@+id/link5"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:height="50dp"
        android:width="300dp"
        android:backgroundTint="#1F1F1F"
        style="@style/Base.TextAppearance.AppCompat.Inverse"
        android:background="@mipmap/dark"
        android:enabled="true"
        android:textStyle="bold" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/link6"
        android:onClick="ta"
        android:id="@+id/btn6"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:height="50dp"
        android:width="300dp"
        android:backgroundTint="#ff1f1f1f"
        style="@style/Base.TextAppearance.AppCompat.Inverse"
        android:background="@mipmap/dark"
        android:enabled="true"
        android:textStyle="bold" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>



